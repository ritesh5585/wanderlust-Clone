<% layout('/layouts/boilerplate') %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>Edit your Listing</h1>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data" >
                <div class="m-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" class="form-control shadow-none" value="<%= listing.title %>" placeholder="title" required>
                    <div class="invalid-feedback">Please provide a title.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control shadow-none" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please provide a valid description.</div>
                </div>

                <div class="mb-3" >
                    <h1>Original image</h1> <br>
                    <img style="width:250px; height:150px;" src="<%= originalImage %>" alt="">
                </div>

                <div class="mb-3">
                    <label for="imageUrl" class="form-label">Upload New Image</label>
                    <input type="file" name="image" class="form-control shadow-none"  placeholder="image " >
                    <div class="invalid-feedback">Please provide a valid image file</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" class="form-control shadow-none" value="<%= listing.price %>" placeholder="1200...." required>
                        <div class="invalid-feedback">Please provide a valid price.</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" class="form-control shadow-none" value="<%= listing.country %>" placeholder="India" required>
                        <div class="invalid-feedback">Please provide a valid country name.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" class="form-control shadow-none" value="<%= listing.location %>" placeholder="Mumbai, Delhi, Kolkata..." required>
                    <div class="invalid-feedback">Please provide a valid location.</div>
                </div>

                <br>
                <button class="btn btn-dark Edit-btn">Edit Listing</button>
                <br>
            </form>
        </div>
    </div>