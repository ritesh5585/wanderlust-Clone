<% layout('/layouts/boilerplate') %>
    <div class="row ">
        <div class="col-8 offset-3 mt-2">
            <h3>Listing details</h3>
        </div>

        <div class="cards col-6 offset-3 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text mt-2">
                    <%= listing.title %>
                </p> <br>
                <h1>
                    <%= listing.owner.username %>
                </h1><br>
                <%= listing.description %> <br>
                    <%= listing.price.toLocaleString('en-IN') %> <br>
                        <%= listing.location %> <br>
                            <%= listing.country %>

            </div>
        </div>
        <br>
        <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
            <div class="btns offset-3 mt-2 mb-2">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark Edit-btn mb-2">Edit</a>

                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <% } %>
                <div class="col-8 offset-3">
                    <% if(currentUser) { %>
                        <hr>
                        <h4>Leave comment</h4>
                        <% if (typeof error !=='undefined' && error) { %>
                            <%= error %>
                                <% } %>
                                    <form class="mb-3 needs-validation" action="/listings/<%= listing.id %>/reviews"
                                        method="POST" novalidate>
                                        <fieldset class="starability-slot mb-2 col-3 offset-4">
                                            <legend class="text-center">Give Rating</legend>

                                            <input type="radio" id="rate1" name="review[rating]" value="1" />
                                            <label for="rate1">1 star</label>

                                            <input type="radio" id="rate2" name="review[rating]" value="2" />
                                            <label for="rate2">2 stars</label>

                                            <input type="radio" id="rate3" name="review[rating]" value="3" />
                                            <label for="rate3">3 stars</label>

                                            <input type="radio" id="rate4" name="review[rating]" value="4" />
                                            <label for="rate4">4 stars</label>

                                            <input type="radio" id="rate5" name="review[rating]" value="5" />
                                            <label for="rate5">5 stars</label>
                                        </fieldset>
                                        <div class="mb-3 mt-3">
                                            <label for="comment" class="form-label">Comments</label>
                                            <textarea name="review[comment]" id="comment" cols="30" rows="5"
                                                class="form-control shadow-none" required></textarea>
                                            <div class="invalid-feedback">please add some comments for review</div>
                                        </div>
                                        <button class="btn btn-outline-dark btn-light">Submit</button>
                                    </form>
                                    <% } %>
                                        <hr />
                                        <p><b>All review</b></p>
                                        <div class="row">
                                            <% for ( let review of listing.reviews ) { %>
                                                <div class="card m-3 col-5">
                                                    <div class="card-body">
                                                        <h5 class="card-title">@<%= review.author.username %>
                                                        </h5>
                                                        <p class="card-title">
                                                            <%= review.comment %>
                                                        </p>
                                                        <p class="starability-result card-text"
                                                            data-rating="<%= review.rating %>">
                                                        </p>
                                                    </div>
                                                    <form method="POST"
                                                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                        <button class="btn btn-dark">DELETE</button>
                                                    </form>
                                                </div>
                                                <% } %>
                                        </div>
                </div>
    </div>